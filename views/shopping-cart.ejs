<h1>Your Cart</h1>
<% if (products.length===0) { %>
    <p>Your cart is empty.</p>
<% } else { %>
    <ul>
        <% products.forEach(product => { %>
            <li>
                <h2>
                    <%= product.name %>
                </h2>
                <p>
                    <%= product.description %>
                </p>
                <p>Price: $<%= product.price %>
                </p>
                <p>Quantity: <%= cart.find(item=> item.productId === product.productId).quantity %></p>
            </li>
        <% }); %>
    </ul>
<% } %>